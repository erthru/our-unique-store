generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = "postgresql://postgres:root@localhost:5432/our-unique-store?schema=public"
}

model Product {
    id                   String   @id
    sku                  String   @unique
    slug                 String   @unique
    name                 String
    price                Decimal
    imageUrls            String[]
    stockQuantity        Int?
    minimumOrderQuantity Int?
    storeName            String
    storeReputation      Int
    createdAt            DateTime @default(now())
    updatedAt            DateTime @updatedAt
}

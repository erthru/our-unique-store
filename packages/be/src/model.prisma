datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Product {
    id                   String   @id
    sku                  String   @unique
    slug                 String   @unique
    name                 String
    price                Decimal
    imageUrls            String[]
    stockQuantity        Int?
    minimumOrderQuantity Int?
    storeName            String
    storeReputation      String
    createdAt            DateTime @default(now())
    updatedAt            DateTime @updatedAt
}
